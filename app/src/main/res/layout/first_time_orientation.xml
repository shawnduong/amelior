<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".FirstTimeOrientation"
>

    <LinearLayout
        android:id="@+id/orientation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:layout_centerInParent="true"
		android:orientation="vertical"
		android:gravity="center"
	>

		<TextView
			android:id="@+id/orientationHello01"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Welcome to Amelior!"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:translationY="64dp"
			android:alpha="0.00"
			android:visibility="invisible"
		/>

		<TextView
			android:id="@+id/orientationHello02"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Amelior! helps you reach your health goals,\nboth mental and physical."
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			android:translationY="64dp"
			android:alpha="0.00"
			android:visibility="invisible"
			android:textAlignment="center"
		/>

		<TextView
			android:id="@+id/orientationHello03"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="In order to do this, we need a few permissions."
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			android:translationY="64dp"
			android:alpha="0.00"
			android:visibility="invisible"
			android:textAlignment="center"
		/>

		<Button
			android:id="@+id/permissionsButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/moodForm"
			android:layout_centerInParent="true"
			android:text="Grant Permissions"
			android:alpha="0.00"
			android:visibility="invisible"
		/>

		<!-- TODO: We probably want a better background color (backgroundTint). -->
		<Button
			android:id="@+id/continueButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/moodForm"
			android:layout_centerInParent="true"
			android:translationY="64dp"
			android:text="Continue"
			android:textColor="#FFFFFF"
			android:backgroundTint="#819C81"
			android:alpha="0.00"
			android:visibility="invisible"
		/>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
