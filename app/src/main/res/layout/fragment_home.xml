<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/Teal_Blue_Lighter"
	android:orientation="vertical"
	tools:context=".HomeFragment"
>

	<RelativeLayout
		android:id="@+id/homeForm"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:orientation="vertical"
		tools:layout_editor_absoluteX="-68dp"
		tools:layout_editor_absoluteY="38dp">

		<!-- User first mood entry form -->
		<LinearLayout
			android:id="@+id/moodForm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:alpha="0.00"
			android:orientation="vertical"
			android:visibility="invisible">

		</LinearLayout>

		<Button
			android:id="@+id/splashSubmit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/moodForm"
			android:layout_centerVertical="true"
			android:layout_marginTop="149dp"
			android:alpha="0.00"
			android:text="Submit"
			android:translationX="95dp"
			android:translationY="-253dp"
			android:visibility="invisible" />

		<TextView
			android:id="@+id/moodLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="Today, I'm feeling"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:translationX="-65dp"
			android:translationY="-320dp" />

		<TextView
			android:id="@+id/moodDescription"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="Alright"
			android:translationX="-68.5dp"
			android:translationY="-294dp" />

		<ImageView
			android:id="@+id/moodGraphic"
			android:layout_width="128dp"
			android:layout_height="128dp"
			android:src="@drawable/emoji_level_03"
			android:translationX="75dp"
			android:translationY="55dp" />

		<SeekBar
			android:id="@+id/moodBar"
			android:layout_width="210dp"
			android:layout_height="210dp"
			android:color="@color/white"
			android:rotation="0"
			android:thumbTint="@color/white"
			android:translationX="38dp"
			android:translationY="103dp" />

		<LinearLayout
			android:id="@+id/moodFormInnerContainer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/moodGraphicContainer"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical">

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>